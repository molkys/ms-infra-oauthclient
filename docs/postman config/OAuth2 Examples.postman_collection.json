{
	"info": {
		"_postman_id": "72389030-ae5b-493d-b0bc-2965c7a3d1d9",
		"name": "OAuth2 Examples",
		"description": "OAuth2 Examples",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
	},
	"item": [
		{
			"name": "authentication server",
			"item": [
				{
					"name": "Get authentication token",
					"request": {
						"method": "POST",
						"header": [],
						"url": {
							"raw": "http://my-client:my-secret@localhost:8080/oauth/token?username=admin1@test.com&password=admin123&grant_type=password",
							"protocol": "http",
							"host": [
								"localhost"
							],
							"auth": {
								"user": "my-client",
								"password": "my-secret"
							},
							"port": "8080",
							"path": [
								"oauth",
								"token"
							],
							"query": [
								{
									"key": "username",
									"value": "admin1@test.com"
								},
								{
									"key": "password",
									"value": "admin123"
								},
								{
									"key": "grant_type",
									"value": "password"
								}
							]
						},
						"description": "Request an authentication token based on application credentials, user credentials and grand type"
					},
					"response": []
				},
				{
					"name": "Get Principal",
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "http://localhost:8080/principal?name=Amilcar&access_token=6000f7a8-af09-4050-9f44-49bae590fbdf",
							"protocol": "http",
							"host": [
								"localhost"
							],
							"port": "8080",
							"path": [
								"principal"
							],
							"query": [
								{
									"key": "name",
									"value": "Amilcar"
								},
								{
									"key": "access_token",
									"value": "6000f7a8-af09-4050-9f44-49bae590fbdf"
								}
							]
						},
						"description": "Retrieves the credentials from an autenticaded user. The request must contain a valid token previously generated by \"Get authentication token\""
					},
					"response": []
				},
				{
					"name": "Get active tokens",
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "http://localhost:8080/admin/token/list?access_token=35a81be9-d77a-498c-aceb-db4c57e2ced4",
							"protocol": "http",
							"host": [
								"localhost"
							],
							"port": "8080",
							"path": [
								"admin",
								"token",
								"list"
							],
							"query": [
								{
									"key": "access_token",
									"value": "35a81be9-d77a-498c-aceb-db4c57e2ced4"
								}
							]
						},
						"description": "Retrieves a list of the current active tokens generated by \"Get authentication token\". This request receives a token generated by \"Get authentication token\""
					},
					"response": []
				},
				{
					"name": "Revoke token",
					"request": {
						"method": "DELETE",
						"header": [],
						"url": {
							"raw": "http://localhost:8080/oauth/revoke?access_token=6000f7a8-af09-4050-9f44-49bae590fbdf",
							"protocol": "http",
							"host": [
								"localhost"
							],
							"port": "8080",
							"path": [
								"oauth",
								"revoke"
							],
							"query": [
								{
									"key": "access_token",
									"value": "6000f7a8-af09-4050-9f44-49bae590fbdf"
								}
							]
						},
						"description": "Revokes a token that is current active and was generated by \"Get authentication token\" "
					},
					"response": []
				}
			]
		},
		{
			"name": "resources application",
			"item": [
				{
					"name": "Say Hello",
					"request": {
						"method": "GET",
						"header": [
							{
								"key": "Authorization",
								"value": "bearer f19ae45f-52db-4a92-8146-343a533d0bbc",
								"type": "text"
							}
						],
						"url": {
							"raw": "http://localhost:9090/hello",
							"protocol": "http",
							"host": [
								"localhost"
							],
							"port": "9090",
							"path": [
								"hello"
							]
						},
						"description": "Invokes the test REST interface that retrieves a \"hello\" message. In order to invoke this REST interface is required to pass a token generate by \"Get authentication token\" through the request's heather."
					},
					"response": []
				}
			]
		}
	]
}